{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "base64",
  "title": "Base64",
  "description": "Quickly encode or decode base64 from the clipboard",
  "icon": "command-icon.png",
  "author": "DanielSinclair",
  "contributors": [
    "sammarks",
    "vitorlostada"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "text-to-base64",
      "title": "Text to Base64",
      "description": "Convert text to base64",
      "mode": "view"
    },
    {
      "name": "base64-to-text",
      "title": "Base64 to Text",
      "description": "Decode a base64 string",
      "mode": "view"
    },
    {
      "name": "base64-to-image",
      "title": "Base64 to Image",
      "description": "Convert base64 to image",
      "mode": "view"
    },
    {
      "name": "image-to-base64",
      "title": "Image to Base64",
      "description": "Convert image to base64",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "defaultAction",
      "description": "The default action to take when encoding / decoding a Base64 string.",
      "type": "dropdown",
      "required": false,
      "title": "Default Action",
      "default": "copyToClipboard",
      "data": [
        {
          "value": "copyToClipboard",
          "title": "Copy to Clipboard"
        },
        {
          "value": "pasteInApp",
          "title": "Paste in App"
        },
        {
          "value": "openInBrowser",
          "title": "Open in Browser"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.79.1",
    "js-base64": "3.7.7",
    "run-applescript": "7.0.0"
  },
  "devDependencies": {
    "@types/node": "22.0.0",
    "@types/react": "18.3.3",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "eslint": "9.8.0",
    "eslint-config-prettier": "9.1.0",
    "react-devtools": "5.3.1",
    "typescript": "5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
